# ==========================================
# Into the Repo - Environment Configuration
# ==========================================
# Copy this file to .env and fill in actual values

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
DATABASE_URL=postgresql://repo_user:repo_password@localhost:5432/into_the_repo
DB_USER=repo_user
DB_PASSWORD=repo_password
DB_NAME=into_the_repo
DB_PORT=5432

# ==========================================
# REDIS CONFIGURATION (Cache & Task Queue)
# ==========================================
REDIS_URL=redis://localhost:6379/0
REDIS_PORT=6379

# ==========================================
# AUTHENTICATION & SECURITY
# IMPORTANT: Change SECRET_KEY in production!
# Generate new key: openssl rand -hex 32
# ==========================================
SECRET_KEY=your-secret-key-change-in-production-run-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# ==========================================
# EXTERNAL API CREDENTIALS
# ==========================================
# GitHub Personal Access Token
# Create at: https://github.com/settings/tokens/new
# Scopes needed: public_repo, read:user
GITHUB_TOKEN=ghp_your_github_personal_access_token_here

# Google Gemini API Key
# Get at: https://ai.google.dev/
GEMINI_API_KEY=your_gemini_api_key_here

# ==========================================
# APPLICATION CONFIGURATION
# ==========================================
BACKEND_PORT=8000
FRONTEND_PORT=3000
LOG_LEVEL=info
NODE_ENV=development

# ==========================================
# FRONTEND API CONFIGURATION
# ==========================================
# URL where frontend will reach the backend API
# For development: http://localhost:8000
# For production with Nginx reverse proxy: /api
# For production with domain: https://api.yourdomain.com
NEXT_PUBLIC_API_URL=/api

# ==========================================
# DOCKER-SPECIFIC OVERRIDES (optional)
# ==========================================
# When using docker-compose, you can override service hostnames
# DB_HOST=db
# REDIS_HOST=redis

