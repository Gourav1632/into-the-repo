# Backend Environment Configuration - Template
# Copy this file to .env and fill in your actual values

# =============== DATABASE (REQUIRED) ===============
# PostgreSQL database URL with pgvector support
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://repo_user:repo_password@localhost:5432/into_the_repo

# =============== REDIS (OPTIONAL) ===============
# Redis URL for caching and Celery task broker
# Default: redis://localhost:6379/0
REDIS_URL=redis://localhost:6379/0

# =============== AI API KEYS (REQUIRED) ===============
# Google API Key for Gemini (used for code analysis, embeddings, and chat)
# Get from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=

# =============== GITHUB (OPTIONAL) ===============
# GitHub API Token to increase rate limits
# Generate at: https://github.com/settings/tokens
GITHUB_TOKEN=

# =============== JWT AUTHENTICATION (REQUIRED) ===============
# Secret key for JWT token signing and verification
# Generate with: openssl rand -hex 32
SECRET_KEY=

# JWT token expiration time in minutes (default: 30)
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============== FRONTEND (OPTIONAL) ===============
# Frontend URL for CORS policy
# Default: http://localhost:3000
FRONTEND_HOST=http://localhost:3000
